<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_marker_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tv_marker_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:layout_toRightOf="@id/iv_marker_thumbnail"
            android:layout_marginLeft="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_marker_thumbnail"
            android:layout_below="@id/tv_marker_title"
            android:layout_marginTop="20dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/tv_marker_lat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lat :"
                android:textSize="16sp"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_marker_long"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Long :"
                android:textSize="16sp"
                android:layout_toRightOf="@id/tv_marker_lat"
                android:layout_below="@id/tv_marker_title"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"/>


        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>